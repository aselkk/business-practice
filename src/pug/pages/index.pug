extends ../layout.pug
include ../mixins/problems
block content
    section#hero
        .container  
            .about__wrapper.row.justify-content-md-between.justify-content-center
                .text.col-sm-12.col-xl-6.col-md-6.ps-4.pt-4
                    img(src="assets/img/bg-polygons.png", alt="")
                    .txt
                        p.top-p Создаем решения
                        p.middle-p Для роста бизнеса
                    p.bottom-p На основе анализа данных с алгоритмами реализации
                    button.home__button#open-modal-btn.open-modal-btn.main__btn.main__btn__hero(data-target="modal-window") Обсудить проблему
